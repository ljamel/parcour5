{% extends "layout.html.twig" %}

{% block content %}

    <div class="title-show">
        <h2>{{ loisir.title }}</h2>
        <img class="liste-main-unique" src="{{ loisir.image }}">
        <p>{{ loisir.content }}</p>
        <h3>Comments</h3>
        {% for comment in comments %}
            <strong>{{ comment.author }}</strong> said : {{ comment.content }}<br>
        {% else %}
            No comments yet.
        {% endfor %}
    </div>

<div id="mapInfo">
    <div id="map"></div>
    <div id="infoLoisirs">essai</div>
</div>

<!-- script qui appel la map -->
<script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?v=3&key=AIzaSyCLCyZdCatCyO348_1vXQr4yEQkDheyQ3A&callback=initMap&posi=lat:{{ loisir.position|replace({",": ", lng: ", '%that%': 48}) }}"></script>
<script src="http://localhost/parcour-5/web/js/ajax.js"></script>
<script src="http://localhost/parcour-5/web/js/map-unique.js"></script>

{% endblock %}
